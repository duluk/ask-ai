    "version": "0.2.0",
    "configurations": [
        {
            "type": "go",
            "request": "launch",
            "name": "Debug Go App with --tui",
            "program": "${workspaceFolder}/cmd/ask-ai/main.go",
            "args": [
                "--tui"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "programPath",
            "description": "Enter the relative path to the Go file to debug (e.g., cmd/ask-ai/main.go)"
        }
    ]
}